<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlueBack"
    tools:context=".QuizActivity">

    <LinearLayout
        android:id="@+id/level_progress"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:elevation="32dp"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_cancel_black_24dp"/>

        <ProgressBar
            android:id="@+id/questions_progressBar"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_bar_layout"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_flag_black_24dp"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/countdown_progressbar"
        android:layout_below="@id/level_progress"
        android:layout_width="match_parent"
        android:layout_height="3dp">
        <ProgressBar
            android:id="@+id/timer_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="@color/colorPrimary"
            android:progress="100"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/icons"
        android:layout_below="@id/countdown_progressbar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/timer_icon"
            android:layout_width="24dp"
            android:layout_marginStart="8dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_timer_black_24dp"/>
        <TextView
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/timer_icon"
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:alpha="0.7"
            android:text="10''"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/timer_icon_1"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:src="@drawable/high_score_icon"/>
            <TextView
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/timer_icon_1"
                android:id="@+id/high_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:alpha="0.7"
                android:text="0"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/timer_icon_3"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:src="@drawable/xp_icon"/>
            <TextView
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/timer_icon_3"
                android:id="@+id/xp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:alpha="0.7"
                android:text="0"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_toStartOf="@+id/current_score"
                android:id="@+id/timer_icon_4"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Score"/>
            <TextView
                android:layout_marginStart="4dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/current_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:alpha="0.7"
                android:text="0"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_below="@+id/icons"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text=""/>
    <ImageView
        android:id="@+id/image_question"
        android:layout_below="@id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/power_up_heading"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text=""
            android:background="@drawable/rounded_button"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b2"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:text=""
            android:background="@drawable/rounded_button"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b3"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:text=""
            android:background="@drawable/rounded_button"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b1"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:text=""
            android:background="@drawable/rounded_button"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/power_up_heading"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7E7E6"
        android:layout_above="@id/life-line">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="POWER UPS"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/my_gem_tag"
                android:layout_toLeftOf="@id/gem_power_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="MY GEMS"/>
            <ImageView
                android:id="@+id/gem_power_up"
                android:layout_toLeftOf="@id/gem_number"
                android:layout_width="28dp"
                android:layout_height="48dp"
                android:src="@drawable/gem"/>
            <TextView
                android:id="@+id/gem_number"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:alpha="0.7"
                android:text="0"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/life-line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eaeef2"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/fifty_fifty_gem"
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fifty_fifty_icon"
                    />
                <ImageView
                    android:id="@+id/fifty_fifty_gem"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_toLeftOf="@id/first_number"
                    android:src="@drawable/spark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_number"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="50/50" />

                <TextView
                    android:id="@+id/first_number"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    android:text="5"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/second_gem_icon"
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/double_chance_icon"
                    />
                <ImageView
                    android:id="@+id/second_gem_icon"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_toLeftOf="@id/secong_no"
                    android:src="@drawable/spark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/secong_no"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="DOUBLE CHANCE" />

                <TextView
                    android:id="@+id/secong_no"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    android:text="5"/>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="3dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="?android:attr/listDivider" />

                <View
                    android:id="@+id/divider6"
                    android:layout_width="3dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/listDivider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/right_answer_power_up"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tick"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/correct_answer_gem"
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/correct_answer_icon"
                    />
                <ImageView
                    android:id="@+id/correct_answer_gem"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_toLeftOf="@id/correct_ans_gem_no"
                    android:src="@drawable/gem"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/correct_ans_gem_no"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="RIGHT ANSWER" />

                <TextView
                    android:id="@+id/correct_ans_gem_no"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:alpha="0.7"
                    android:text="5"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>