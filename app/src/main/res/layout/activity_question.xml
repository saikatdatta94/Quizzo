<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">
    <!--<TextView-->
        <!--android:id="@+id/head"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <!--<TextView-->
        <!--android:layout_below="@+id/head"-->
        <!--android:id="@+id/descri"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorChrome"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:toolbarId="@id/question_toolbar">

            <ImageView
                app:layout_collapseMode="parallax"
                android:src="@drawable/thumb"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="188dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/question_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Heading"
                app:layout_collapseMode="pin"/>



        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <Button
                android:focusable="true"
                android:background="@drawable/play_button"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/radiantCyan"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:drawableStart="@drawable/ic_play_circle_outline_black_24dp"
                android:text="Play"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heading"
            android:textSize="32sp"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/description"
                android:layout_below="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descriotion"
                android:textSize="24sp"/>

            <android.support.v7.widget.CardView
                android:layout_below="@id/description"
                android:layout_width="272dp"
                android:layout_centerHorizontal="true"
                android:layout_height="152dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="#6DEC93"
                android:layout_marginTop="16dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:divider="?android:listDivider"
                    android:dividerPadding="2.5dp"
                    android:showDividers="middle">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/level_text"
                            android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" YOUR LEVEL"
                        android:textAlignment="center"
                        android:textSize="16sp"/>
                        <TextView
                            android:layout_below="@id/level_text"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="40sp"/>
                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/following_text"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FOLLOWERS"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_below="@+id/following_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="40sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>




    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/follow_button"
        android:src="@drawable/round_settings_white_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/app_bar"
        android:translationZ="12dp"
        android:layout_marginEnd="16dp"
        app:elevation="6dp"
        app:layout_anchorGravity="bottom|end|right"/>

</android.support.design.widget.CoordinatorLayout>