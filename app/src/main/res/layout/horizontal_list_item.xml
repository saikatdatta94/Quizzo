<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/lighterBlueBack"
        android:layout_width="168dp"
        android:layout_height="188dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >

            <ImageView
                android:id="@+id/thumbnail_horizontal_category_item"
                android:layout_width="158dp"
                android:layout_height="94dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/thumb" />

            <TextView
            android:id="@+id/heading_horizontal_category_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail_horizontal_category_item"
            android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
            android:fontFamily="@font/fibraoneregular"
                android:textColor="@color/colorPrimary"
            android:text="Space"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/description_horizontal_category_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading_horizontal_category_item"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
                android:textSize="12sp"
            android:fontFamily="@font/fibraoneregular"
            android:text="Space jsahd "
            android:textStyle="bold" />


        </RelativeLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="148dp"
            android:layout_marginLeft="130dp"

            android:src="@drawable/ic_play_circle_outline_grey_24dp" />

    </android.support.v7.widget.CardView>
</RelativeLayout>